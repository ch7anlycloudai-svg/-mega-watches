RewriteEngine On
RewriteBase /

# Skip API requests â€” let them pass through to the Node.js backend
RewriteRule ^api(/|$) - [L]

# If the requested resource is not a real file
RewriteCond %{REQUEST_FILENAME} !-f
# If the requested resource is not a real directory
RewriteCond %{REQUEST_FILENAME} !-d

# Redirect everything else to index.html for SPA routing
RewriteRule ^ /index.html [L]
